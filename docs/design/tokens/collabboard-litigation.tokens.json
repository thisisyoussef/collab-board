      "elevated": {
        "$type": "color",
        "$value": "#132D54"
      },
      "active": {
        "$type": "color",
        "$value": "#1A3A6A"
      }
    }
  },
  "semantic": {
    "light": {
      "bgPage": {
        "$type": "color",
        "$value": "{color.neutral.white}"
      },
      "bgPanel": {
        "$type": "color",
        "$value": "{color.neutral.cream}"
      },
      "bgElevated": {
        "$type": "color",
        "$value": "#FFFFFF"
      },
      "textPrimary": {
        "$type": "color",
        "$value": "{color.neutral.charcoal}"
      },
      "textSecondary": {
        "$type": "color",
        "$value": "{color.neutral.darkGray}"
      },
      "border": {
        "$type": "color",
        "$value": "{color.neutral.warmGray}"
      },
      "accent": {
        "$type": "color",
        "$value": "{color.brand.amber}"
      },
      "accentHover": {
        "$type": "color",
        "$value": "{color.brand.amberLight}"
      }
    },
    "dark": {
      "bgPage": {
        "$type": "color",
        "$value": "{color.darkMode.base}"
      },
      "bgPanel": {
        "$type": "color",
        "$value": "{color.darkMode.surface}"
      },
      "bgElevated": {
        "$type": "color",
        "$value": "{color.darkMode.elevated}"
      },
      "bgActive": {
        "$type": "color",
        "$value": "{color.darkMode.active}"
      },
      "textPrimary": {
        "$type": "color",
        "$value": "#F7F3EB"
      },
      "textSecondary": {
        "$type": "color",
        "$value": "#D6CDBF"
      },
      "border": {
        "$type": "color",
        "$value": "#2B4674"
      },
      "accent": {
        "$type": "color",
        "$value": "{color.brand.amber}"
      },
      "accentHover": {
        "$type": "color",
        "$value": "{color.brand.amberLight}"
      }
    }
  },
  "radius": {
    "tag": {
      "$type": "dimension",
      "$value": "4px"
    },
    "button": {
      "$type": "dimension",
      "$value": "8px"
    },
    "card": {
