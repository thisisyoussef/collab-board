    "panel": {
      "$type": "dimension",
      "$value": "16px"
    },
    "pill": {
      "$type": "dimension",
      "$value": "999px"
    }
  },
  "space": {
    "xs": {
      "$type": "dimension",
      "$value": "8px"
    },
    "sm": {
      "$type": "dimension",
      "$value": "16px"
    },
    "md": {
      "$type": "dimension",
      "$value": "24px"
    },
    "lg": {
      "$type": "dimension",
      "$value": "32px"
    },
    "xl": {
      "$type": "dimension",
      "$value": "48px"
    },
    "2xl": {
      "$type": "dimension",
      "$value": "64px"
    },
    "3xl": {
      "$type": "dimension",
      "$value": "96px"
    }
  },
  "typeScale": {
    "heroMin": {
      "$type": "dimension",
      "$value": "48px"
    },
    "heroMax": {
      "$type": "dimension",
      "$value": "88px"
    },
    "h1Min": {
      "$type": "dimension",
      "$value": "32px"
    },
    "h1Max": {
      "$type": "dimension",
      "$value": "52px"
    },
    "h2Min": {
      "$type": "dimension",
      "$value": "24px"
    },
    "h2Max": {
      "$type": "dimension",
      "$value": "36px"
    },
    "h3Min": {
      "$type": "dimension",
      "$value": "18px"
    },
    "h3Max": {
      "$type": "dimension",
      "$value": "24px"
    },
    "body": {
      "$type": "dimension",
      "$value": "16px"
    },
    "caption": {
      "$type": "dimension",
      "$value": "14px"
    },
    "mono": {
      "$type": "dimension",
      "$value": "12px"
    }
  },
  "motion": {
    "durationFade": {
      "$type": "duration",
      "$value": "150ms"
    },
    "durationStandard": {
      "$type": "duration",
      "$value": "200ms"
    },
    "durationSpring": {
      "$type": "duration",
      "$value": "300ms"
    },
    "easeOut": {
      "$type": "cubicBezier",
      "$value": [0.16, 1, 0.3, 1]
    },
    "easeSpring": {
      "$type": "cubicBezier",
      "$value": [0.34, 1.56, 0.64, 1]
    },
    "easeFade": {
      "$type": "cubicBezier",
      "$value": [0.4, 0, 1, 1]
    }
  }
}
