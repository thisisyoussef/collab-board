      "darkGray": {
        "$type": "color",
        "$value": "#4A463F"
      },
      "charcoal": {
        "$type": "color",
        "$value": "#1E1C19"
      }
    },
    "darkMode": {
      "base": {
        "$type": "color",
        "$value": "#070E1A"
      },
      "surface": {
        "$type": "color",
        "$value": "#0B1D3A"
