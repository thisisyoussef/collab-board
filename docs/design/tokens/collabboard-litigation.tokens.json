{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "meta": {
    "name": "CollabBoard Litigation",
    "version": "1.0.0",
    "updated": "2026-02-20",
    "notes": "Design-only token set for UI reskin. No behavior or data model changes."
  },
  "font": {
    "display": {
      "$type": "fontFamily",
      "$value": "'DM Serif Display', Georgia, serif"
    },
    "interface": {
      "$type": "fontFamily",
      "$value": "'Outfit', 'Avenir Next', 'Segoe UI', sans-serif"
    },
    "mono": {
      "$type": "fontFamily",
      "$value": "'JetBrains Mono', 'SFMono-Regular', Consolas, monospace"
    }
  },
  "color": {
    "brand": {
      "navy": {
        "$type": "color",
        "$value": "#0B1D3A"
      },
      "navyMid": {
        "$type": "color",
        "$value": "#132D54"
      },
      "navyLight": {
        "$type": "color",
        "$value": "#1A3A6A"
      },
      "slate": {
        "$type": "color",
        "$value": "#2A4A7F"
      },
      "amber": {
        "$type": "color",
        "$value": "#D4952B"
      },
      "amberLight": {
        "$type": "color",
        "$value": "#E8B35A"
      },
      "amberGlow": {
        "$type": "color",
        "$value": "#F5D08E"
      }
    },
    "signal": {
      "danger": {
        "$type": "color",
        "$value": "#C4453E"
      },
      "success": {
        "$type": "color",
        "$value": "#3A8F6E"
      },
      "info": {
        "$type": "color",
        "$value": "#4A8FCC"
      },
      "warning": {
        "$type": "color",
        "$value": "#D4A52B"
      }
    },
    "neutral": {
      "white": {
        "$type": "color",
        "$value": "#FAFAF8"
      },
      "cream": {
        "$type": "color",
        "$value": "#F2F0EB"
      },
      "warmGray": {
        "$type": "color",
        "$value": "#D6D1C8"
      },
      "midGray": {
        "$type": "color",
        "$value": "#8A8578"
